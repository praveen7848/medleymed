#!/usr/bin/env node
var glamour = require(__dirname + '/../src/glamour.js');
var program = require('commander');

program
    .version(glamour.version)
    .usage('[rootDirectory]')
    .parse(process.argv);

return (function (undefined)
{
    cwd = (program.args[0] == undefined)
        ? process.cwd()
        : process.cwd() + '/' + program.args[0];

    glamour.run(cwd);

    var rel = cwd.substr(process.cwd().length);
    if (rel != '') rel += '/';
    console.log("'"+rel+".glamour.sass' generated.")
})();